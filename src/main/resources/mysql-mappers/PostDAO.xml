<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.geetion.tieba.dao.PostDAO">
    <resultMap type="com.geetion.tieba.pojo.Post" id="BaseResultMap">

        <id property="id" column="post_id"/>
        <result property="create_time" column="post_create_time"/>
        <result property="title" column="post_title"/>
        <result property="content" column="post_content"/>
        <result property="update_time" column="post_update_time"/>
        <result property="top_status" column="post_top_status"/>
        <result property="best_status" column="post_best_status"/>
        <result property="user_id" column="post_user_id"/>

    </resultMap>

    <sql id="tableProperty">
        id as post_id,
        create_time as post_create_time,
        title as post_title,
        update_time as post_update_time,
        top_status as post_top_status,
        best_status as post_best_status
        user_id as post_user_id
    </sql>



    <insert id="insert" parameterType="com.geetion.tieba.pojo.Post">
        INSERT INTO post
        <trim prefix="(" suffix=")" suffixOverrides="," >
            <if test="createTime != null ">
                create_time,
            </if>
            <if test="title != null ">
                title,
            </if>
            <if test="content != null ">
                content,
            </if>
            <if test="updateTime != null ">
                update_time,
            </if>
            <if test="topStatus != null ">
                top_status,
            </if>
            <if test="bestStatus != null ">
                best_status,
            </if>
            <if test="userId != null ">
                user_id,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="createTime != null ">
                #{createTime},
            </if>
            <if test="title != null ">
                #{title},
            </if>
            <if test="content != null ">
                #{content},
            </if>
            <if test="updateTime != null ">
                #{updateTime},
            </if>
            <if test="topStatus != null ">
                #{topStatus},
            </if>
            <if test="bestStatus != null ">
                #{bestStatus},
            </if>
            <if test="userId != null ">
                #{userId},
            </if>
        </trim>

    </insert>

    <delete id="delete" parameterType="java.lang.Long">
        DELETE FROM post WHERE id = #{id,jdbcType=BIGINT}
    </delete>

    <delete id="deleteBatch" parameterType="java.util.List" >
        DELETE FROM post
        WHERE id IN (
        <foreach collection="list" item="item" index="index" separator=",">
            #{list[${index}]}
        </foreach>
        )
    </delete>

    <update id="update" parameterType="com.geetion.tieba.pojo.Post">
    UPDATE post
        <trim suffixOverrides=",">
            <set>
                <if test="createTime != null ">
                    create_time = #{createTime},
                </if>
                <if test="title != null ">
                    title = #{title},
                </if>
                <if test="content != null ">
                    content = #{content},
                </if>
                <if test="updateTime != null ">
                    update_time = #{updateTime},
                </if>
                <if test="topStatus != null ">
                    top_status = #{topStatus},
                </if>
                <if test="bestStatus != null ">
                    best_status = #{bestStatus},
                </if>
                <if test="userId != null ">
                    user_id = #{userId},
                </if>
            </set>
        </trim>
        WHERE id = #{id,jdbcType=BIGINT}
    </update>

    <select id="selectPK" resultMap="BaseResultMap" parameterType="java.lang.Long">
        SELECT
          <include refid="tableProperty" />
        FROM post
        WHERE id = #{id}
    </select>

    <select id="selectByClient" resultMap="BaseResultMap" parameterType="java.lang.Long">
        SELECT
        <include refid="tableProperty" />
        FROM post
        WHERE user_id = #{clientId}
    </select>

